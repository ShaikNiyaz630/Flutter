Question 3: Your client has engaged you to create a slide animation featuring an image as part of their project.
Source Code :
import 'package:flutter/material.dart';

void main() {
  runApp(const SlideImageApp());
}

class SlideImageApp extends StatelessWidget {
  const SlideImageApp({super.key});

  @override
  Widget build(BuildContext context) {
    return const MaterialApp(
      debugShowCheckedModeBanner: false,
      home: SlideImageScreen(),
    );
  }
}

class SlideImageScreen extends StatefulWidget {
  const SlideImageScreen({super.key});

  @override
  State<SlideImageScreen> createState() => _SlideImageScreenState();
}

class _SlideImageScreenState extends State<SlideImageScreen>
    with SingleTickerProviderStateMixin {
  late AnimationController _controller;
  late Animation<Offset> _offsetAnimation;

  @override
  void initState() {
    super.initState();

    _controller = AnimationController(
      duration: const Duration(seconds: 2),
      vsync: this,
    );

    _offsetAnimation = Tween<Offset>(
      begin: const Offset(-1.0, 0.0), // Slide from left
      end: Offset.zero,               // End at original position
    ).animate(CurvedAnimation(parent: _controller, curve: Curves.easeInOut));

    _controller.forward(); // Start animation
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text('Slide Image Animation')),
      body: Center(
        child: SlideTransition(
          position: _offsetAnimation,
          child: Image.network(
            'https://picsum.photos/250?image=9',
            width: 250,
            height: 250,
          ),
        ),
      ),
    );
  }
}
